{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": ".",
        "outDir": "./dist",
        "moduleResolution": "node",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "types": ["node", "jest"],
        "isolatedModules": false
    },
    "include": [
        "src", 
        "tests", 
    ],
    "paths": {
        "@models/*": ["models/*"]
    }
}
